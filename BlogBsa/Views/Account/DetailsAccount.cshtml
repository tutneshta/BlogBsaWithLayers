﻿@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BlogBsa.Domain.Entity.User

@{
    ViewData["Title"] = "Details";
}

<h1>Пользователь</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
          <dd class = "col-sm-10">
              @foreach (var role in Model.Roles)
              {
                  <span class="badge rounded-pill text-bg-success" style="color:green">@role.Name</span>
              }
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="EditAccount" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="GetAccounts">Все пользователи</a>
</div>
